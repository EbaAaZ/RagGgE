{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "esnext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "noEmit": false,
    "composite": true,
    "allowJs": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationDir": "./dist/types",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react",
    "types": [
      "@webgpu/types"
    ],
    "typeRoots": [
      "./node_modules/@types"
    ],
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
  ],
  "references": [
    {
      "path": "../model"
    }
  ],
  "exclude": [
    "node_modules"
  ]
}